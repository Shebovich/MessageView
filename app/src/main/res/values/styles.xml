<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="MessageView">

        <attr name="isOwnMessage" format="boolean" />
        <attr name="isShowArrow" format="boolean" />
        <attr name="setColor" format="color"/>
        <attr name="setSecondaryColor" format="color" />
        <attr name="setPrimaryColor" format="color" />
        <attr name="setTextColor" format="color" />

        <attr name="radius" format="integer"/>

    </declare-styleable>

</resources>